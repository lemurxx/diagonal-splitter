{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "keyofStringsOnly": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "outDir": "./dist", 
    "lib": [
      "es6",
      "dom"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules"
  ]
}